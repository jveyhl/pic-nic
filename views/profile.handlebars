<div class='row'>
  <div class='col-auto'>
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class='row mt-4'>
  <div class='col-md-6'>
    <h3>Create a New Recipe:</h3>

    <form class='form new-recipe-form'>
      <div class='form-group'>
        <label for='recipe-name'>recipe name:</label>
        <input
          class='form-input'
          type='text'
          id='recipe-name'
          name='recipe-name'
        />
      </div>

      <div class='form-group'>
        <label for='recipe-desc'>description:</label>
        <textarea
          class='form-input'
          id='recipe-desc'
          name='recipe-desc'
        ></textarea>
      </div>

      <div class='form-group'>
        <input type='checkbox' id='nuts' name='nuts' value='true' />
        <label for='nuts'> Has Nuts</label><br />
        <input type='checkbox' id='gluten' name='gluten' value='true' />
        <label for='nuts'> Has Gluten</label><br />
        <input type='checkbox' id='dairy' name='dairy' value='true' />
        <label for='nuts'> Has Diary</label><br />
        <input type='checkbox' id='eggs' name='eggs' value='true' />
        <label for='nuts'> Has Eggs</label><br />
        <input type='checkbox' id='shellfish' name='shellfish' value='true' />
        <label for='nuts'> Has ShellFish</label><br />
      </div>

      <script
        src='https://upload-widget.cloudinary.com/global/all.js'
        type='text/javascript'
      ></script>

      <div class='form-group'>
      </div>
    </form>
    <button id='upload_widget' class='cloudinary-button'>Upload files</button>
    <button id='create_recipes' class='btn btn-primary'>Create</button>
  </div>

  {{#if recipes.length}}
    <div class='col-md-6 recipe-list'>
      <h3>Current Recipes:</h3>

      {{#each recipes as |recipe|}}
        <div class='row mb-2'>
          <div class='col-md-8'>
            <h4><a href='/recipe/{{recipe.id}}'>{{recipe.name}}</a></h4>
          </div>
          <div class='col-md-4'>
            <button
              class='btn btn-sm btn-danger'
              data-id='{{recipe.id}}'
            >DELETE</button>
          </div>
        </div>
      {{/each}}
    </div>
  {{/if}}
</div>

<script src='./js/profile.js'></script>