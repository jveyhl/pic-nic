<!-- Loop over each object in the recipes array -->
{{#each recipes as |recipe|}}
  <div class='row mb-4 recipe'>
    <div class='col-md-5'>
      <h2>
        <!-- Call helper function with triple brackets to render the emoji span as HTML -->
        {{{get_emoji}}}
        <a href='/recipe/{{recipe.id}}'>{{recipe.name}}</a>
      </h2>
      <p>
        <span for='img' aria-label='money'>ğŸ’²</span>
        <!-- Pass needed_funding value to the helper function -->
        <span class='dollar-amount'>{{format_amount
            recipe.needed_funding
          }}</span>
        needed!
      </p>
      <p>Created by
        {{recipe.user.name}}
        on
        {{format_date recipe.date_created}}</p>
    </div>
    <div class='col-md-7'>
      <p>
        {{recipe.description}}
      </p>
    </div>
  </div>
{{/each}}